<h1>Admin Dashboard</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Number of Products</th>
      <th scope="col">Number of Categories</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> 
        <%= link_to Product.count,  [:admin, :products] %> 
      </td>
      <td> 
        <%= link_to Category.count,  [:admin, :categories] %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to "Click here to go to Admin Products",  [:admin, :products], class: 'btn btn-lg btn-primary' %>
      </td>
      <td>
      <%= link_to "Click here to go to Admin Categories",  [:admin, :categories], class: 'btn btn-lg btn-primary' %>
      </td>
</tr>
  </tbody>
</table>